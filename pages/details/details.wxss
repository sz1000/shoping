/* pages/shop/shop.wxss */
.home {
  height: 100%;
}

.list {
  display: flex;
  margin: 20rpx;
  padding: 10rpx;
}

image {
  width: 200rpx !important;
  height: 200rpx !important;
}

.img {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.name {
  margin: 20rpx;
  font-size: 30rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.minPrice {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.foot {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
}
.item {
  font-size: 28rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.addCart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: coral;
  color: #fff;
  font-size: 30rpx;
}
.buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #eb4550;
  color: #fff;
  font-size: 30rpx;
}